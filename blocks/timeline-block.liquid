<div class="timeline-block">
  <div class="timeline-dot"></div>
  <div class="timeline-content">
    <div class="timeline-header">
      <div class="timeline-title">{{ block.settings.heading }}</div>
      <div class="timeline-date">{{ block.settings.year }}</div>
    </div>
    <p>{{ block.settings.description }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Timeline Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Timeline Heading"
    },
    {
      "type": "text",
      "id": "year",
      "label": "Year",
      "info": "Enter the year for this timeline entry.",
      "default": "2023"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Timeline description goes here."
    }
  ],

  "presets": [
    {
      "name": "Timeline Block"
    }
  ]
}
{% endschema %}
