<div class="timeline-block">
  <div class="timeline-dot"></div>
  <div class="timeline-content">
    <h3>{{ block.settings.heading }}</h3>
    <p>{{ block.settings.description }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Timeline Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Timeline Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Timeline description goes here."
    }
  ],

  "presets": [
    {
      "name": "Timeline Block"
    }
  ]
}
{% endschema %}
